<head>
  <%= stylesheet_link_tag "application.scss", media: "all" %>
  <style type="text/scss">
    body {
      height: 100%;
    }

    .welcome-background {
      position: fixed;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      background-size: cover;
      background-position: center;
    }

    .welcome-centered-content {
      position: fixed;
      top: 50%;
      left: 50%;
      /* bring your own prefixes */
      transform: translate(-50%, -50%);

      .welcome-title {
        text-align: center;
      }

      search-container {
        align: center;
      }
    }
  </style>
</head>


<div class="welcome-background" style="background-image:url(<%=image_path('home.jpg')%>">
  <div class="welcome-centered-content">
    <h1 class="welcome-title">DNDb</h1>
    <div class="search-container">
      <%= form_tag do %>
          <%= text_field_tag(
            :search_phrase,
            nil,
            {
              :id => "crystal-search",
              :class => "crystal-search",
              :placeholder => "...",
              :autocomplete => :off
            })
          %>
        <% end %>
    </div>
  </div>
</div>