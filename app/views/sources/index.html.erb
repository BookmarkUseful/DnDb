<div class="top" style="background-image=url(<%=asset_path('index/source_artwork1.png')%>">
  <div class="main-header-container">
    <%= link_to sources_path, :class => 'top-link' do %>
      <%= image_tag("icons/source_icon.png", :class => "top-icon source-icon") %>
      <h1 class="top-header">Sources</h1>
    <% end %>
  </div>
</div>

<div id="index-container">
  <table class="index table">
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Kind</th>
    </tr>
    <%= render :partial => :source, :collection => @sources, :as => :source %>
  </table>
</div>
