<head>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag 'application'%>
  <style type="text/css">
    body {
      height: 100%;
    }

    .welcome-background {
      position: fixed;
      width: 100%;
      height: 100%;
      left: 0;
      top: 0;
      background-size: cover;
      background-position: center;
    }

    .welcome-centered-content {
      box-shadow: 1px 2px 4px rgba(0, 0, 0, .5);
      background-color: black;
      padding: 10px;
      position: fixed;
      top: 50%;
      left: 50%;
      /* bring your own prefixes */
      transform: translate(-50%, -50%);
    }

    .welcome-title {
      margin-top: 5px;
      text-align: center;
      width: 500;
      color: white;
    }

    .search-container {
      margin-bottom: 5px;
    }

    .welcome-title {
      color: white;
      width: 500;
    }
  </style>
</head>

<div class="welcome-background" style="background-image:url(<%=image_path('home.jpg')%>">
  <div class="welcome-centered-content img-rounded">
    <h1 class="welcome-title">DNDb</h1>
    <div class="search-container">
      <%= form_tag do %>
          <%= text_field_tag(
            :search_phrase,
            nil,
            {
              :id => "crystal-search",
              :class => "crystal-search",
              :placeholder => "...",
              :autocomplete => :off
            })
          %>
        <% end %>
    </div>
  </div>
</div>