<% content_for :head do %>
  <link rel="canonical" href="<%= url_for(format: :html, only_path: false) %>" >
  <link rel="amphtml" href="<%= url_for(format: :amp, only_path: false) %>" >
<% end %>

<div id="amp-name">
  <div class="image" background-image="url(<%= asset_path(@artwork) %>)">
    <h1><%= @spell.name %></h1>
  </div>
</div>

<div id="index-container">
  <table>
    <tbody>
      <tr>
        <td colspan=2><%=@spell.print_level_school%></td>
      </tr>
      <tr>
        <td>Source</td>
        <td><%="#{@spell.source.name} (#{@spell.source.kind})"%></td>
      </tr>
      <tr>
        <td>Range</td>
        <td><%=@spell.print_range(false)%></td>
      </tr>
      <tr>
        <td>Casting Time</td>
        <td><%=@spell.print_casting_time(false)%></td>
      </tr>
      <tr>
        <td>Duration</td>
        <td><%=@spell.print_duration(false)%></td>
      </tr>
      <tr>
        <td colspan=2><%=simple_format(@spell.print_description)%></td>
      </tr>
    </tbody>
  </table>
</div>


<%= link_to 'Back', spells_path %>
