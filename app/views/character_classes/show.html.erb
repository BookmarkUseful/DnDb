<div class="artwork-fade head-artwork">
  <%= image_tag("character_classes/#{@character_class.name.snakecase}_artwork1.png", :class => "artwork") %>
</div>

<div class="top">
  <div class="main-header-container">
    <%= link_to character_classes_path, :class => 'top-link' do %>
      <h1 class="top-header"><%=@character_class.name%></h1>
    <% end %>
  </div>
</div>

<div class="description-container">
  <div class="description">
    <%= @character_class.description %>
  </div>
</div>

<% if @features.any? %>
  <div class="aspect-header-container">
    <h3 class="aspect-header">Class Features</h3>
  </div>
  <div class="aspect-container two-cols">
    <%= render :partial => 'feature', :collection=> @features %>
  </div>
<% end %>

<% if @spells.any? %>
  <div class="aspect-header-container">
    <h3 class ="aspect-header">Spells</h3>
  </div>
  <div class="aspect-container four-cols">
    <%= render :partial => 'spells', :object => @spells %>
  </div>
<% end %>
